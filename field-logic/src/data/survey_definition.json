{
    "meta": {
        "survey_id": "field_survey_v1",
        "title": "Household Economic Assessment 2026",
        "version": "1.0.2",
        "created_at": "2026-01-29T12:00:00Z"
    },
    "config": {
        "allow_back_navigation": true,
        "save_progress_automatically": true
    },
    "nodes": [
        {
            "id": "start",
            "type": "info",
            "content": {
                "text": "Welcome to the Field Interview Interface. Please ensure you have consent before proceeding.",
                "label": "Start Interview"
            },
            "routing": {
                "default": "q1_household_head"
            }
        },
        {
            "id": "q1_household_head",
            "type": "text",
            "validation": {
                "required": true,
                "regex": "^[a-zA-Z\\s]*$"
            },
            "content": {
                "question": "Name of Household Head",
                "helper_text": "Last Name, First Name"
            },
            "routing": {
                "default": "q2_employment_status"
            }
        },
        {
            "id": "q2_employment_status",
            "type": "single_choice",
            "content": {
                "question": "Is the household head currently employed?",
                "options": [
                    {
                        "label": "Yes, Employed",
                        "value": "employed"
                    },
                    {
                        "label": "No, Unemployed",
                        "value": "unemployed"
                    },
                    {
                        "label": "Retired",
                        "value": "retired"
                    }
                ]
            },
            "routing": {
                "rules": [
                    {
                        "operator": "equals",
                        "value": "employed",
                        "target": "q3_industry_sector"
                    },
                    {
                        "operator": "equals",
                        "value": "unemployed",
                        "target": "q4_job_seeking"
                    }
                ],
                "default": "q5_end_section"
            }
        },
        {
            "id": "q3_industry_sector",
            "type": "single_choice",
            "content": {
                "question": "Which sector do they work in?",
                "options": [
                    {
                        "label": "Agriculture/Fisheries",
                        "value": "agri"
                    },
                    {
                        "label": "Service/BPO",
                        "value": "service"
                    },
                    {
                        "label": "Manufacturing",
                        "value": "mfg"
                    }
                ]
            },
            "routing": {
                "default": "q5_end_section"
            }
        },
        {
            "id": "q4_job_seeking",
            "type": "boolean",
            "content": {
                "question": "Are they actively looking for work?",
                "label_true": "Yes",
                "label_false": "No"
            },
            "routing": {
                "default": "q5_end_section"
            }
        },
        {
            "id": "q5_end_section",
            "type": "summary",
            "content": {
                "text": "Section Complete. Ready to submit data."
            },
            "routing": {
                "default": null
            }
        }
    ]
}